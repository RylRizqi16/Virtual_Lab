{
  "builds": [
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backend/**"
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    },
    {
      "src": "mobile/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/mobile$",
      "dest": "/mobile/dist/index.html"
    },
    {
      "src": "/mobile/$",
      "dest": "/mobile/dist/index.html"
    },
    {
      "src": "/mobile/_expo/(.*)",
      "dest": "/mobile/dist/_expo/$1"
    },
    {
      "src": "/mobile/assets/(.*)",
      "dest": "/mobile/dist/assets/$1"
    },
    {
      "src": "/mobile/(.*\\.(js|css|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|html))",
      "dest": "/mobile/dist/$1"
    },
    {
      "src": "/mobile/(.*)",
      "dest": "/mobile/dist/index.html"
    },
    {
      "src": "/pendulum.html",
      "dest": "/frontend/pendulum.html"
    },
    {
      "src": "/freefall.html",
      "dest": "/frontend/freefall.html"
    },
    {
      "src": "/projectile.html",
      "dest": "/frontend/projectile.html"
    },
    {
      "src": "/profile.html",
      "dest": "/frontend/profile.html"
    },
    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg|webp|ico|json|txt|woff|woff2|ttf|mp3|mp4|webm|pdf))$",
      "dest": "/frontend/$1"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}